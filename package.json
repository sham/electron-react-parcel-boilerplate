{
  "name": "electron-react-parcel-boilerplate",
  "version": "0.9.0",
  "description": "A boilerplate for Electron + React + Parcel.",
  "author": "shamofu",
  "license": "MIT",
  "private": "true",
  "main": "app/main/.parcel/main.js",
  "renderer": "app/renderer/.parcel/index.html",
  "targets": {
    "main": {
      "context": "electron-main"
    },
    "renderer": {
      "context": "browser"
    }
  },
  "scripts": {
    "start": "run-s main:build electron:watch",
    "test": "run-s parcel:build \"test:jest {@}\" --",
    "release": "run-s parcel:build \"electron:build {@}\" --",
    "electron:watch": "run-p -r parcel:watch electron:start",
    "electron:start": "nodemon --watch app/main/.parcel --exec \"electron .\"",
    "electron:build": "electron-builder --x64 --publish=never",
    "parcel:build": "run-s main:build renderer:build",
    "parcel:watch": "run-p -r main:watch renderer:watch",
    "main:build": "parcel build app/main/main.ts --target=main",
    "main:watch": "parcel watch app/main/main.ts --target=main",
    "renderer:build": "parcel build app/renderer/index.html --public-url ./ --target=renderer",
    "renderer:watch": "parcel serve app/renderer/index.html --port 1124 --target=renderer",
    "test:jest": "jest"
  },
  "build": {
    "productName": "ElectronReactParcel",
    "appId": "org.shamofu.ElectronReactParcel",
    "files": [
      "app/**",
      "!app/main/main.ts",
      "!app/main/tests/**",
      "!app/renderer/**",
      "app/renderer/.parcel/**",
      "!app/**/*.map"
    ],
    "mac": {
      "target": [
        "zip"
      ],
      "artifactName": "${productName}-mac.${ext}"
    },
    "win": {
      "target": [
        "zip"
      ],
      "artifactName": "${productName}-win.${ext}"
    },
    "linux": {
      "target": [
        "zip"
      ],
      "category": "Development",
      "artifactName": "${productName}-linux.${ext}"
    },
    "directories": {
      "output": "release"
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverageFrom": [
      "app/renderer/**",
      "!app/renderer/index.tsx",
      "!app/renderer/tests/**",
      "!app/renderer/.parcel/**"
    ],
    "transform": {
      "^.+\\.tsx?$": "babel-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.13.14",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "babel-jest": "^26.6.3",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-beta.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-test-renderer": "^17.0.2",
    "spectron": "^14.0.0",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "electron-is-dev": "^2.0.0"
  }
}
